}
.toplink {
	height: 16px;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	margin-top: 72px;
	margin-bottom: 17px;
}
.toplink a {
	flex: 1;
	font:400 14px/16px "microsoft yahei";
	color:#fff;
	text-align: center;
	transition: 0.3s
}
.toplink a:hover {
	color:#f6ff00;
	font-weight: bold;
}
.fixrul {
	margin-left: 2px;
	margin-right: 2px;
}
.fixrul a{
	display: block;
	height: 27px;
	cursor: pointer;
	transition: 0.3s
}
.fixrul a:hover {
	background: #fc417b;
}
.fixrul a:hover span {
	color:#fff;
}
.fixrul a:hover p {
	color:#fff;
}
.fixrul a span{
	display: block;
	float: left;
