/*table 表格样式start*/
.table {
	width: 100%;
	border-collapse: collapse;
	margin: 0 auto;
	text-align: center;

}
.table tr {
	background: #fff;
	transition: 0.3s
}
.table tr:nth-child(n){
	background: #f4f4f4;
}
.table tr:nth-child(2n){
	background: #fff;
}
.table tr td{
	font:400 16px "microsoft yahei";
	color:#000;
	border:none;
	padding: 5px;
	padding-top: 15px;
	padding-bottom: 15px;
}
.table tr:hover {
	background: rgba(198,47,254,0.8);
}
.table tr:hover td {
	color:#fff;
}
.table tr td p {
	text-align: left;
	padding-left: 5px;
	line-height: 24px;
}
.table tr td a {
	display: block;
	width: 130px;
	height: 35px;
	border:1px solid #fc417b;
	font:400 18px/35px "microsoft yahei";
	color:#fff;
	text-align: center;
	border-radius: 18px;
	margin: 0 auto;
	background: #fc417b;
	transition: 0.3s
}
.table tr td a:hover {
	color:#fff;
	background: transparent;
}
.table tr {
	/*border-bottom:1px solid #000;*/
}
.table tr th{
	height: 50px;
	background: #593af9;
	font:400 20px/50px "microsoft yahei";
	color:#fff;
}
/*table 表格样式end*/
